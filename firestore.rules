rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ─── Helpers ──────────────────────────────────────────────────────────────
    function isAuthenticated() {
      return request.auth != null;
    }

    function hasRole(role) {
      return isAuthenticated() && request.auth.token.role == role;
    }

    function isManagerOrAdmin() {
      return hasRole('MANAGER') || hasRole('ADMIN');
    }

    function isAdmin() {
      return hasRole('ADMIN');
    }

    function isSameUser(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // ─── Règle par défaut : tout refuser ──────────────────────────────────────
    match /{document=**} {
      allow read, write: if false;
    }

    // ─── Users ────────────────────────────────────────────────────────────────
    // Toutes les écritures passent par le backend (Firebase Admin SDK)
    match /users/{userId} {
      allow read: if isAdmin() || isSameUser(userId);
      allow write: if false;
    }

    // ─── Produits ─────────────────────────────────────────────────────────────
    match /products/{productId} {
      allow read: if isAuthenticated();
      allow create, update: if isManagerOrAdmin();
      allow delete: if isAdmin();

      match /stock/{storeId} {
        allow read: if isAuthenticated();
        allow write: if false; // Via transaction backend uniquement
      }
    }

    // ─── Ventes ───────────────────────────────────────────────────────────────
    match /sales/{saleId} {
      allow read: if isAuthenticated() && (
        isManagerOrAdmin() ||
        resource.data.cashierId == request.auth.uid
      );
      allow create: if isAuthenticated();
      allow update: if isManagerOrAdmin();
      allow delete: if false; // Jamais supprimer (audit trail)

      match /lines/{lineId} {
        allow read: if isAuthenticated();
        allow write: if false;
      }
    }

    // ─── Clients ──────────────────────────────────────────────────────────────
    match /clients/{clientId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isManagerOrAdmin();
      allow delete: if isAdmin(); // RGPD uniquement
    }

    // ─── Boutiques ────────────────────────────────────────────────────────────
    match /stores/{storeId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // ─── Mouvements de stock ──────────────────────────────────────────────────
    match /stockMovements/{movementId} {
      allow read: if isAuthenticated();
      allow write: if false; // Via backend uniquement
    }

    // ─── Audit logs ───────────────────────────────────────────────────────────
    match /auditLogs/{logId} {
      allow read: if isAdmin();
      allow write: if false; // Via Firebase Admin SDK uniquement
    }

    // ─── Tokens révoqués ──────────────────────────────────────────────────────
    match /revokedTokens/{jti} {
      allow read, write: if false; // Via Firebase Admin SDK uniquement
    }

    // ─── Promotions ───────────────────────────────────────────────────────────
    match /promotions/{promoId} {
      allow read: if isAuthenticated();
      allow create, update: if isManagerOrAdmin();
      allow delete: if isAdmin();
    }
  }
}
