{
  "name": "backend",
  "version": "0.1.0",
  "private": true,
  "main": "dist/functions/index.js",
  "engines": {
    "node": "20"
  },
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "dev": "ts-node-dev --respawn --transpile-only src/dev-server.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:integration": "FIRESTORE_EMULATOR_HOST=localhost:8080 jest --testPathPattern=integration --passWithNoTests",
    "seed": "ts-node-dev --transpile-only --project tsconfig.json scripts/seed.ts",
    "clean": "rm -rf dist coverage",
    "deploy:staging": "firebase deploy --only functions --project staging",
    "deploy:prod": "firebase deploy --only functions --project production"
  },
  "dependencies": {
    "@pos-lvmh/shared": "workspace:*",
    "express": "^4.21.0",
    "firebase-admin": "^13.0.0",
    "firebase-functions": "^6.3.0",
    "argon2": "^0.41.0",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.23.8",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.4.0",
    "helmet": "^8.0.0",
    "uuid": "^11.0.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/cors": "^2.8.17",
    "@types/uuid": "^10.0.0",
    "@types/jest": "^29.5.14",
    "@types/supertest": "^6.0.2",
    "typescript": "^5.7.0",
    "ts-node-dev": "^2.0.0",
    "ts-jest": "^29.2.0",
    "jest": "^29.7.0",
    "supertest": "^7.0.0"
  }
}
